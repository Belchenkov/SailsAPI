<ol class="breadcrumb">
    <a class="breadcrumb-item" href="/articles/list">Articles</a>
    <a class="breadcrumb-item active" href="/articles/add">Add</a>
    <span class="breadcrumb-item active"></span>
</ol>

<h1 class="display-4">Add Article</h1>

<form action="/articles/create" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" rows="6" id="body" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="px-3 btn btn-outline-primary">
            <i class="fa fa-send mr-1"></i>
            Send
        </button>
    </div>
</form>