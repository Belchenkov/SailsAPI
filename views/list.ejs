<h1 class="display-4">Articles</h1>
<table class="table  table-hover">
    <thead>
        <tr class="bg-secondary">
            <th>#</th>
            <th>Title</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        <% articles.forEach(function(article) { %>
            <tr>
                <td>
                    <%= article.id %>
                </td>
                <td>
                    <%= article.title %>
                </td>
                <td>
                    <a href="/articles/edit/<%= article.id %>" class="mr-2 btn btn-outline-warning">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <form method="post" class="d-inline" action="/articles/delete/<%= article.id %>">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fa fa-trash mr-1"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>